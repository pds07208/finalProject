<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.mappers.boardMapper">

	<insert id="insertBoard">
		insert into board(num,name,subject,content,readcount,date)
		values(#{num},#{name},#{subject},#{content},#{readcount},#{date})
	</insert>

	<select id="getMaxNum" resultType="java.lang.Integer">
		select max(num) from board
	</select>

	<select id="getBoardList"
		resultType="com.itwillbs.domain.BoardDTO">
		select * from board order by num desc limit #{startRow},#{pageSize}
	</select>

	<select id="getBoardCount" resultType="java.lang.Integer">
		select count(*) from board
	</select>

	<update id="updateReadcount">
		update board set readcount=readcount+1 where num=#{num}
	</update>

	<select id="getBoard" resultType="com.itwillbs.domain.BoardDTO">
		select * from board where num=#{num}
	</select>

</mapper>

